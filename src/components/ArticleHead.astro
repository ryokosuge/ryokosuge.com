---
import Time from "./Time.astro";
import RichText from "./RichText.astro";

export interface Props {
  id?: string;
  title: string;
  description: string;
  publishedAt: string;
  updatedAt: string;
}
const { id, title, description, publishedAt, updatedAt } = Astro.props;
---

<div class="grid gap-2 lg:gap-4">
  {
    id == null ? (
      <h2 class="text-3xl font-bold hover:underline inline-block">{title}</h2>
    ) : (
      <a href={`/articles/${id}`}>
        <h2 class="text-3xl font-bold hover:underline inline-block">{title}</h2>
      </a>
    )
  }
  <div class="prose prose-sm">
    <RichText body={description} />
  </div>
  <div class="grid gap-1 lg:gap-2">
    <p class="text-sm text-gray-500">
      公開日: <Time date={publishedAt} />
    </p>
    <p class="text-sm text-gray-500">
      最終更新日: <Time date={updatedAt} />
    </p>
  </div>
</div>
