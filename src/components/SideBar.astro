---
export interface Props {
  backInfo?: {
    path: string;
    name: string;
  };
}

const { backInfo } = Astro.props;
---

<div class="flex flex-col md:col-span-1">
  {
    backInfo && (
      <a href={backInfo.path} class="text-primary-dark font-semibold text-lg">
        ‚Üê Back {backInfo.name}
      </a>
    )
  }
</div>
<div class="md:col-span-3">
  <slot />
</div>
