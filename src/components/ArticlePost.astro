---
import { Article, FieldID } from "../types";
import ArticleHead from "./ArticleHead.astro";
import Code from "./Code.astro";
import RichText from "./RichText.astro";

export interface Props {
  article: Article;
}

const {
  article: { title, publishedAt, updatedAt, description, sections },
} = Astro.props;
---

<article>
  <ArticleHead
    title={title}
    description={description}
    publishedAt={publishedAt}
    updatedAt={updatedAt}
  />
  <div class="prose lg:prose-lg mx-auto max-w-6xl pt-4 pb-8 grid">
    {
      sections.map((section) =>
        section.fieldId === FieldID.ARTICLE_SECTION_CODE ? (
          <Code lang={section.lang[0]} code={section.code} />
        ) : (
          <RichText body={section.body} />
        )
      )
    }
  </div>
</article>
